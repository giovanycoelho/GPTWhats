{
  "name": "gpt-whats",
  "version": "1.0.0",
  "description": "WhatsApp AI Bot with GPT-5 Mini integration",
  "main": "electron-main.cjs",
  "homepage": "./",
  "type": "module",
  "scripts": {
    "dev": "concurrently --names \"SERVER,CLIENT\" --prefix-colors \"cyan,magenta\" --restart-tries 3 \"npm run server\" \"npm run client\"",
    "server": "nodemon src/server.js",
    "client": "cd client && npm run dev",
    "build": "cd client && npm run build",
    "start": "node src/server.js",
    "start:all": "node start.js",
    "install-all": "npm install && cd client && npm install",
    "dev:stable": "concurrently --names \"SERVER,CLIENT\" --prefix-colors \"cyan,magenta\" \"npm start\" \"npm run client\"",
    "electron": "npx electron .",
    "electron:dev": "concurrently --names \"SERVER,ELECTRON\" --prefix-colors \"cyan,yellow\" \"npm start\" \"wait-on http://localhost:3001 && npx electron .\" --kill-others-on-fail",
    "build:all": "npm run build && npm run build:electron",
    "build:electron": "electron-builder",
    "build:win": "electron-builder --win",
    "release": "node release.js",
    "release:quick": "node release.js quick",
    "release:build": "npm run build:all && electron-builder --publish=always",
    "test-setup": "node test-setup.js",
    "electron:win": "start-electron.bat",
    "start:electron": "node start-gptwhats.cjs"
  },
  "dependencies": {
    "@google-cloud/text-to-speech": "^5.1.0",
    "@whiskeysockets/baileys": "^6.7.8",
    "axios": "^1.6.8",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "electron-squirrel-startup": "^1.0.1",
    "electron-updater": "^6.1.8",
    "express": "^4.18.2",
    "ffmpeg-static": "^5.2.0",
    "fluent-ffmpeg": "^2.1.2",
    "helmet": "^7.1.0",
    "link-preview-js": "^3.1.0",
    "multer": "^1.4.5-lts.1",
    "node-cron": "^3.0.3",
    "node-gtts": "^2.0.2",
    "openai": "^4.52.7",
    "qrcode": "^1.5.3",
    "rate-limiter-flexible": "^4.0.1",
    "sharp": "^0.32.6",
    "socket.io": "^4.7.5",
    "sqlite3": "^5.1.6",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1",
    "nodemon": "^3.0.3",
    "wait-on": "^7.2.0"
  },
  "keywords": [
    "whatsapp",
    "ai",
    "bot",
    "gpt-5",
    "baileys"
  ],
  "author": "GPTWhats",
  "license": "MIT",
  "build": {
    "appId": "com.gptwhats.app",
    "productName": "GPTWhats",
    "directories": {
      "output": "dist"
    },
    "files": [
      "electron.js",
      "src/**/*",
      "client/dist/**/*",
      "database.sqlite",
      "node_modules/**/*",
      "!node_modules/.cache",
      "!**/*.{iml,o,hprof,orig,pyc,pyo,rbc,swp,csproj,sln,xproj}",
      "!.editorconfig",
      "!**/._*",
      "!**/{.DS_Store,.git,.hg,.svn,CVS,RCS,SCCS,.gitignore,.gitattributes}",
      "!**/{__pycache__,thumbs.db,.flowconfig,.idea,.vs,.nyc_output}",
      "!**/{appveyor.yml,.travis.yml,circle.yml}",
      "!**/{npm-debug.log,yarn.lock,.yarn-integrity,.yarn-metadata.json}"
    ],
    "extraResources": [
      {
        "from": "sessions",
        "to": "sessions",
        "filter": [
          "**/*"
        ]
      },
      {
        "from": "temp",
        "to": "temp",
        "filter": [
          "**/*"
        ]
      },
      {
        "from": "uploads",
        "to": "uploads",
        "filter": [
          "**/*"
        ]
      }
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "assets/icon.ico",
      "publisherName": "GPTWhats",
      "requestedExecutionLevel": "asInvoker"
    },
    "nsis": {
      "oneClick": false,
      "perMachine": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "installerIcon": "assets/icon.ico",
      "uninstallerIcon": "assets/icon.ico",
      "installerHeaderIcon": "assets/icon.ico",
      "deleteAppDataOnUninstall": false,
      "include": "installer.nsh"
    },
    "publish": {
      "provider": "github",
      "owner": "giovanycoelho",
      "repo": "GPTWhats",
      "private": false
    }
  }
}
